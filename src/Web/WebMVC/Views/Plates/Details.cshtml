@using WebMVC.DTOs

@model PlateDto
@{
    ViewData["Title"] = "Plate";
}

<div class="text-center">
    <h1>Plate Details</h1>
    <dl class="row">
        <dt class="col-sm-2">Registration</dt>
        <dd class="col-sm-10">@Model.Registration</dd>

        <dt class="col-sm-2">Purchase Price</dt>
        <dd class="col-sm-10">@Model.PurchasePrice</dd>

        <dt class="col-sm-2">Sale Price</dt>
        <dd class="col-sm-10">@Model.SalePrice</dd>

        <dt class="col-sm-2">Letters</dt>
        <dd class="col-sm-10">@Model.Letters</dd>

        <dt class="col-sm-2">Numbers</dt>
        <dd class="col-sm-10">@Model.Numbers</dd>
    </dl>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to Plates</a>
</div>
